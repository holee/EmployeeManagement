@model Employee

<form asp-action="Create" asp-controller="Employees">
    <div class="mb-2">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
    </div>
    <div class="mb-2">
        <label asp-for="LastName"></label>
        <input asp-for="LastName" class="form-control" />
    </div>
    <div class="mb-2">
        <label asp-for="Gender"></label>
        <span>
            <input type="radio" asp-for="Gender" value="male" /> Male
        </span>
        <span>
            <input type="radio" asp-for="Gender" value="female" /> Female
        </span>
    </div>
    <div>
        <select asp-for="DepartmentId" class="form-select"
                asp-items="@ViewBag.deps">
            <option value="">----Select department---</option>
        </select>
    </div>
    <div class="mb-2">
        <label asp-for="Address"></label>
        <textarea asp-for="Address " style="resize:none;" class="form-control"></textarea>
    </div>
    <button>Create</button>
</form>
